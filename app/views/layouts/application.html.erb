<!DOCTYPE html>
<html>
<head>
  <title>Trackkr002</title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag "jquery-1.5.1.min", "highcharts", "rails" %>
  <%= csrf_meta_tag %>
</head>
<body>
	<%= image_tag("/images/logo.gif") %> <br>
	<div class="notice">
	<%= flash[:notice] %>
	</div>
	
<div id="user_nav">
  <% if current_user %>
    <%= link_to "Edit Profile", edit_user_path(:current) %> |
    <%= link_to "Logout", logout_path %>
  <% else %>
    <%= link_to "Register", new_user_path %> |
   <%= render :partial => '/user_sessions/sign_in' %>
  <% end %>
</div>

<%= yield %>

</body>
</html>
